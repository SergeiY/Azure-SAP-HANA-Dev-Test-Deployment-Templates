                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('azuredeploy.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "vmDeploymentNumber": {
                        "value": "[parameters('vmDeploymentNumber')]"
                    },
