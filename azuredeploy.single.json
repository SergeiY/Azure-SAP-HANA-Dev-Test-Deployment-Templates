{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmDeploymentNumber": {
            "type": "string",
            "maxLength": 2,
            "minLength": 2,
            "metadata": {
                "description": "Unique, 2-digit deployment number, e.g. 20"
            }
        },
        "vmInstanceNumber": {
            "type": "string",
            "maxLength": 1,
            "minLength": 1,
            "metadata": {
                "description": "Unique, 1-digit VM Instance number, e.g. 4"
            }
        },
        "vmImage": {
            "type": "string",
            "allowedValues": [
                "Gallery Image - SLES SAP BYOS 12-SP1",
                "Gallery Image - SLES SAP BYOS 12-SP2",
                "Gallery Image - SLES SAP BYOS 12-SP3"
            ],
            "defaultValue": "Gallery Image - SLES SAP BYOS 12-SP2",
            "metadata": {
                "description": "The Virtual Machine operating system you want to deploy"
            }
        },
        "vmRole": {
            "type": "string",
            "allowedValues": [
                "App - NetWeaver Gateway",
                "App - SAP PO",
                "App - Gateway FES",
                "App - SAP BW",
                "App - S/4HANA Utilities",
                "App - Convergent Charging",
                "App - Convergent Invoicing",
                "App - SOM (CRM ABAP)",
                "App - SOM (CRM JAVA)",
                "App - Cloud Connector",
                "DB - NetWeaver Gateway",
                "DB - SAP PO",
                "DB - Gateway FES",
                "DB - SAP BW",
                "DB - S/4HANA Utilities",
                "DB - S/4HANA Hybris Billing"
            ],
            "defaultValue": "App - NetWeaver Gateway",
            "metadata": {
                "description": "The Virtual Machine role you want to deploy"
            }
        },
        "vmAdminUserName": {
            "type": "string",
            "defaultValue": "azureuser"
        },
        "vmAdminPassword": {
            "type": "securestring"
        },
        "NicIpAddress1": {
            "type": "string",
            "maxLength": 15,
            "defaultValue": "",
            "metadata": {
                "description": "Static IP addresses of 1st IP of NIC. If the address is blank, DHCP will be used"
            }
        },
        "NicIpAddress2": {
            "type": "string",
            "maxLength": 15,
            "defaultValue": "",
            "metadata": {
                "description": "Static IP addresses of 2nd IP of NIC. If the address is blank, DHCP will be used"
            }
        },
        "NicIpAddress3": {
            "type": "string",
            "maxLength": 15,
            "defaultValue": "",
            "metadata": {
                "description": "Static IP addresses of 3rd IP of NIC. If the address is blank, DHCP will be used"
            }
        },
        "NicIpAddress4": {
            "type": "string",
            "maxLength": 15,
            "defaultValue": "",
            "metadata": {
                "description": "Static IP addresses of 4th IP of NIC. If the address is blank, DHCP will be used"
            }
        },
        "NicSpnIpAddress1": {
            "type": "string",
            "maxLength": 15,
            "defaultValue": "",
            "metadata": {
                "description": "Static IP addresses of 1st IP of NIC SPN. If the address is blank, DHCP will be used"
            }
        },
        "NicSpnIpAddress2": {
            "type": "string",
            "maxLength": 15,
            "defaultValue": "",
            "metadata": {
                "description": "Static IP addresses of 2nd IP of NIC SPN. If the address is blank, DHCP will be used"
            }
        },
        "NicSpnIpAddress3": {
            "type": "string",
            "maxLength": 15,
            "defaultValue": "",
            "metadata": {
                "description": "Static IP addresses of 3rd IP of NIC SPN. If the address is blank, DHCP will be used"
            }
        },
        "NicSpnIpAddress4": {
            "type": "string",
            "maxLength": 15,
            "defaultValue": "",
            "metadata": {
                "description": "Static IP addresses of 4th IP of NIC SPN. If the address is blank, DHCP will be used"
            }
        }
    },
    "variables": {
        "uniqueDeploymentId": "[concat(parameters('vmDeploymentNumber'), '.', toLower(trim(take(parameters('vmRole'),3))),'.', parameters('vmInstanceNumber'))]",
        "azuredeploy.templatename": "[concat('azuredeploy.', variables('uniqueDeploymentId'))]",
        "azuredeploy.templateuri": "[uri(deployment().properties.templateLink.uri, 'azuredeploy.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('azuredeploy.templatename')]",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('azuredeploy.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "vmDeploymentNumber": {
                        "value": "[parameters('vmDeploymentNumber')]"
                    },
                    "vmInstanceNumber": {
                        "value": "[parameters('vmInstanceNumber')]"
                    },
                    "vmImage": {
                        "value": "[parameters('vmImage')]"
                    },
                    "vmRole": {
                        "value": "[parameters('vmRole')]"
                    },
                    "vmAdminUserName": {
                        "value": "[parameters('vmAdminUserName')]"
                    },
                    "vmAdminPassword": {
                        "value": "[parameters('vmAdminPassword')]"
                    },
                    "nic1IpAddresses": {
                        "value": [
                            "[parameters('NicIpAddress1')]",
                            "[parameters('NicIpAddress2')]",
                            "[parameters('NicIpAddress3')]",
                            "[parameters('NicIpAddress4')]"
                        ]
                    },
                    "nic2IpAddresses": {
                        "value": [
                            "[parameters('NicSpnIpAddress1')]",
                            "[parameters('NicSpnIpAddress2')]",
                            "[parameters('NicSpnIpAddress3')]",
                            "[parameters('NicSpnIpAddress4')]"
                        ]
                    }
                }
            }
        }
    ],
    "outputs": {}
}
