{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmDeploymentNumber": {
            "type": "string",
            "maxLength": 2,
            "minLength": 2,
            "metadata": {
                "description": "Unique, 2-digit deployment number, e.g. 20"
            }
        },
        "vmImage": {
            "type": "string",
            "allowedValues": [
                "Gallery Image - SLES SAP BYOS 12-SP1",
                "Gallery Image - SLES SAP BYOS 12-SP2",
                "Gallery Image - SLES SAP BYOS 12-SP3"
            ],
            "defaultValue": "Gallery Image - SLES SAP BYOS 12-SP2",
            "metadata": {
                "description": "The Virtual Machine operating system you want to deploy"
            }
        },
        "vmAdminUserName": {
            "type": "string",
            "defaultValue": "azureuser"
        },
        "vmAdminPassword": {
            "type": "securestring"
        },
        "customScriptStorageAccountKey": {
            "type": "securestring",
            "metadata": {
                "description": "Storage account key to access a custom script"
            }
        },
        "App-Nic-1": {
            "type": "array",
            "minLength": 1,
            "maxLength": 4,
            "defaultValue": ["","","",""],
            "metadata": {
                "description": "Array of static IP addresses for App-Nic-1. If any address is blank, DHCP will be used"
            }
        },
        "App-Nic-2": {
            "type": "array",
            "minLength": 1,
            "maxLength": 4,
            "defaultValue": ["","",""],
            "metadata": {
                "description": "Array of static IP addresses for App-Nic-2. If any address is blank, DHCP will be used"
            }
        },
        "Db-Nic-1": {
            "type": "array",
            "minLength": 1,
            "maxLength": 4,
            "defaultValue": ["",""],
            "metadata": {
                "description": "Array of static IP addresses for Db-Nic-1. If any address is blank, DHCP will be used"
            }
        },
        "Db-Nic-2": {
            "type": "array",
            "minLength": 1,
            "maxLength": 4,
            "defaultValue": ["",""],
            "metadata": {
                "description": "Array of static IP addresses for Db-Nic-2. If any address is blank, DHCP will be used"
            }
        }
    },
    "variables": {
        "uniqueDeploymentId.App.8": "[concat(parameters('vmDeploymentNumber'), '.app.8')]",
        "azuredeploy.App.8.templatename": "[concat('azuredeploy.', variables('uniqueDeploymentId.App.8'))]",
        "uniqueDeploymentId.Db.8": "[concat(parameters('vmDeploymentNumber'), '.db.8')]",
        "azuredeploy.Db.8.templatename": "[concat('azuredeploy.', variables('uniqueDeploymentId.Db.8'))]",
        "azuredeploy.templateuri": "[uri(deployment().properties.templateLink.uri, 'azuredeploy.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('azuredeploy.App.8.templatename')]",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('azuredeploy.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "vmDeploymentNumber": {
                        "value": "[parameters('vmDeploymentNumber')]"
                    },
                    "vmInstanceNumber": {
                        "value": "8"
                    },
                    "vmImage": {
                        "value": "[parameters('vmImage')]"
                    },
                    "vmRole": {
                        "value": "App - SAP BW"
                    },
                    "vmAdminUserName": {
                        "value": "[parameters('vmAdminUserName')]"
                    },
                    "vmAdminPassword": {
                        "value": "[parameters('vmAdminPassword')]"
                    },
                    "customScriptStorageAccountKey": {
                        "value": "[parameters('customScriptStorageAccountKey')]"
                    },
                    "nic1IpAddresses": {
                        "value": "[parameters('App-Nic-1')]"
                    },
                    "nic2IpAddresses": {
                        "value": "[parameters('App-Nic-2')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('azuredeploy.Db.8.templatename')]",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('azuredeploy.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "vmDeploymentNumber": {
                        "value": "[parameters('vmDeploymentNumber')]"
                    },
                    "vmInstanceNumber": {
                        "value": "8"
                    },
                    "vmImage": {
                        "value": "[parameters('vmImage')]"
                    },
                    "vmRole": {
                        "value": "DB - SAP BW"
                    },
                    "vmAdminUserName": {
                        "value": "[parameters('vmAdminUserName')]"
                    },
                    "vmAdminPassword": {
                        "value": "[parameters('vmAdminPassword')]"
                    },
                    "customScriptStorageAccountKey": {
                        "value": "[parameters('customScriptStorageAccountKey')]"
                    },
                    "nic1IpAddresses": {
                        "value": "[parameters('Db-Nic-1')]"
                    },
                    "nic2IpAddresses": {
                        "value": "[parameters('Db-Nic-2')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
